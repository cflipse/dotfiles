	ui = auto
[alias]
	st = status -s
	ci = commit
	co = checkout
	track = branch --track
	amend = commit --amend
	review = log -p -b
  lg = log --graph --oneline --decorate --date=short --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s'
  unchanged = update-index --assume-unchanged
	all = "!f() { ls -R -d */.git | sed s,/.git,, | xargs -P10 -I{} git -C {} $1; }; f"
