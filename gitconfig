[core]
	editor = vim
	excludesfile = /home/flip/.gitignore
[rerere]
	enabled = 1
[rebase]
	autosquash = true
[push]
	default = simple
[include]
	path = .gitconfig.local

[includeIf "gitdir:~/groupon/"]
	path = ~/groupon/.gitconfig
[init]
	templatedir = ~/.git_template
[credential]
	helper = cache
